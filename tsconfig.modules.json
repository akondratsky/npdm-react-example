{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,

    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__mocks__/**/*",
    "src/**/__tests__/**/*"
  ]
}